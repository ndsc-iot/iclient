<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.yanxin.iot.mariadb.beans.RegionPO" table="region" schema="iotdb">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="createdTime" column="created_time"/>
        <set name="siteareasById" inverse="true">
            <key>
                <column name="region_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.yanxin.iot.mariadb.beans.SiteareaPO"/>
        </set>
    </class>
</hibernate-mapping>