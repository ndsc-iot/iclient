<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.yanxin.iot.mariadb.beans.SiteareaPO" table="sitearea" schema="iotdb">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="regionId" column="region_id"/>
        <property name="createdTime" column="created_time"/>
        <many-to-one name="regionByRegionId" class="com.yanxin.iot.mariadb.beans.RegionPO">
            <column name="region_id"/>
        </many-to-one>
        <set name="roomsById" inverse="true">
            <key>
                <column name="site_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.yanxin.iot.mariadb.beans.RoomPO"/>
        </set>
    </class>
</hibernate-mapping>