<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.yanxin.iot.mariadb.beans.RoomPO" table="room" schema="iotdb">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="siteId" column="site_id"/>
        <property name="createdTime" column="created_time"/>
        <many-to-one name="siteareaBySiteId" class="com.yanxin.iot.mariadb.beans.SiteareaPO">
            <column name="site_id" not-null="true"/>
        </many-to-one>
        <set name="sensorsById" inverse="true">
            <key>
                <column name="room_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.yanxin.iot.mariadb.beans.SensorPO"/>
        </set>
    </class>
</hibernate-mapping>